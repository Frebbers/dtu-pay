#!/usr/bin/env bash

# Exit on error
set -e

# Resolve the directory where this script lives (works even when called from elsewhere)
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Run tcpmon using axis.jar in the same directory
java -cp "$SCRIPT_DIR/axis.jar" org.apache.axis.utils.tcpmon &

